#include<iostream>
using namespace std;
class matrix
{
public:
int a[10][10];
int r,c;
int i;
int j;
void getdata()
{
/*cout<<"Enter the rows and column of the matrix"<<endl;
cin>>r;
cin>>c;*/
cout<<"enter the element of the matrix"<<endl;
for(i=0;i<2;i++)
{
for(j=0;j<2;j++)
{
cin>>a[i][j];
}
}
}
matrix operator +(matrix m)
{
matrix temp;
for(i=0;i < 2;i++)
for(j=0;j < 2;j++)
temp.a[i][j]=a[i][j]+m.a[i][j];
return temp;
}
void display()
{
for(i=0;i<2;i++)
{
for(j=0;j<2;j++)
{
cout<<a[i][j]<<"\t";
}
cout<<endl;
}
}
};
int main()
{
matrix m1;
matrix m2;
matrix m3;
m2.getdata();
cout<<"Enter the details of the matrix which you want to add"<<endl;
m3.getdata();
m1=m2+m3;
m2.display();
cout<<"\t";
cout<<"  +  ";
cout<<" \n";
m3.display();
cout<<endl;
m1.display();
}
